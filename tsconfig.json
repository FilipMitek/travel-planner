{
  "allowJs": true,
  "compilerOptions": {
    "outDir": "./lib",
    "noImplicitAny": false,
    "target": "es2018",
    "module": "commonjs",
    "sourceMap": true,
    "declaration": true,
    "types": ["reflect-metadata"],
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "lib": [
      "es5",
      "es6",
      "es2015",
      "es7",
      "es2016",
      "es2017",
      "dom"
    ],
    "allowSyntheticDefaultImports": true
  },
  "exclude": [
    "node_modules",
    "lib"
  ],
  "include": [
    "./src/index.ts"
  ]
}
