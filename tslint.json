{
  "extends": ["tslint:recommended"],
  "rules": {
    "no-bitwise": false,
    "class-name": true,
    "variable-name": [
      true,
      "ban-keywords",
      "check-format",
      "allow-leading-underscore"
    ],
    "comment-format": [
      true,
      "check-space"
    ],
    "arrow-return-shorthand": [
      true
    ],
    "indent": [
      true,
      "spaces"
    ],
    "one-line": [
      true,
      "check-open-brace",
      "check-whitespace"
    ],
    "no-var-keyword": true,
    "no-empty": true,
    "no-eval": true,
    "no-unused-variable": true,
    "quotemark": [
      true,
      "single",
      "avoid-escape"
    ],
    "semicolon": [
      true,
      "always",
      "ignore-bound-class-methods"
    ],
    "whitespace": [
      true,
      "check-branch",
      "check-decl",
      "check-operator",
      "check-module",
      "check-separator",
      "check-type"
    ],
    "typedef-whitespace": [
      true,
      {
        "call-signature": "nospace",
        "index-signature": "nospace",
        "parameter": "nospace",
        "property-declaration": "nospace",
        "variable-declaration": "nospace"
      },
      {
        "call-signature": "onespace",
        "index-signature": "onespace",
        "parameter": "onespace",
        "property-declaration": "onespace",
        "variable-declaration": "onespace"
      }
    ],
    "curly": [
      true,
      "ignore-same-line"
    ],
    "no-console": [
      true
    ],
    "no-internal-module": true,
    "no-null-keyword": false,
    "prefer-const": true,
    "no-switch-case-fall-through": true,
    "triple-equals": true,
    "jsdoc-format": true,
    "ordered-imports": false,
    "max-line-length": [true, 155],
    "object-literal-sort-keys": false
  }
}
